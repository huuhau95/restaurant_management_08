<%= provide :title, t("admin.dish.list_dish") %>
<div class="row">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="overflow_hidden">
          <h1 class="float_left"><%= t "admin.dish.list_dish" %></h1>
        </div>
        <h3 class="title">
          <strong><%= t "admin.dish.total_dish" %></strong>
          <span class="red_color">
            <%= @dishes.total_count ||= 0 %>
          </span>
        </h3>
        <div class="nav search-row" id="top_menu">
          <%= form_tag admin_dishes_path, method: :get do %>
            <%= text_field_tag :search, params[:search],
              class: "form-control sinput",
              placeholder: t("admin.dish.enter_name") %>
            <%= select_tag :category_id, options_for_select(@categories),
              {class: "form-control search_category",
              include_blank: t("choose_category")} %>
            <%= select_tag :status, options_for_select([[Settings.settings.out_of_stock,
              Settings.settings.out_of_stock_number], [Settings.settings.stock,
              Settings.settings.stock_number]]),
              {class: "form-control search_statuses",
              include_blank: t("choose_status")} %>
            <%= button_tag type: "submit", class: "btn btn-primary submit_search",
              name: nil do %>
              <%= t "search" %>
            <% end %>
          <% end %>
        </div>
        <%= link_to t("admin.table.add_table"), new_admin_dish_path, class: "btn btn-primary float_right" %>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>
                <%= t "admin.stt" %>
              </th>
              <th>
                <%= t "admin.name" %>
              </th>
              <th>
                <%= t "admin.status" %>
              </th>
              <th>
                <%= t "admin.createdate" %>
              </th>
              <th>
                <%= t "admin.actions" %>
              </th>
            </tr>
          </thead>
          <tbody>
            <%= render "dish", dishes: @dishes %>
          </tbody>
        </table>
        <div class="margin_bottom20px float_right">
          <%= paginate @dishes, theme: "twitter-bootstrap-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
